.arrowleft:before{
  content: "";
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  border: 3rpx solid #A9A9A9;
  border-left: none;
  border-bottom: none;
  transform: rotate(45deg);
}


.block:after{
  content: "";
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  border: 3rpx solid #A9A9A9;
  border-left: none;
  border-bottom: none;
  transform: rotate(45deg);
}
